<Page x:Class="Anarco_Cinema_Desk.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anarco_Cinema_Desk"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Login">

    <Grid Background="White">

        <Rectangle HorizontalAlignment="Left" Height="36" Margin="0,-1,0,0" Stroke="Black" VerticalAlignment="Top" Width="1280" Fill="#FF1D1D1D"/>
        <Label x:Name="tx_login" Content="{}{Login}" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Height="82" Width="252" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" TabIndex="2147483624" FontFamily="Georgia" FontSize="63"/>
        <TextBox x:Name="cx_email" HorizontalAlignment="Left" Height="39" Margin="94,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="704" TextChanged="TextBox_TextChanged" BorderBrush="Gray"/>
        <Label x:Name="tx_email" Content="email" HorizontalAlignment="Left" Margin="94,184,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="77" Width="144"/>
        <TextBox x:Name="cx_senha" HorizontalAlignment="Left" Height="39" Margin="94,498,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="704" TextChanged="TextBox_TextChanged" BorderBrush="Gray"/>
        <Label x:Name="tx_senha" Content="senha" HorizontalAlignment="Left" Margin="94,415,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="76" Width="152"/>
        <Image HorizontalAlignment="Left" Height="348" Margin="905,222,0,0" VerticalAlignment="Top" Width="338" Source="/icone.png"/>

    </Grid>
</Page>
