<Page x:Class="Anarco_Cinema_Desk.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anarco_Cinema_Desk"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      Title="Login">

    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFCACACA" Offset="1"/>
                <GradientStop Color="White" Offset="0"/>
            </RadialGradientBrush>
        </Grid.Background>

        <Image HorizontalAlignment="Center" Height="905" VerticalAlignment="Top" Width="1691" Source="/filme.jpg" Opacity="0.9" Margin="0,-1,0,0"/>

        <TextBox x:Name="cx_email" HorizontalAlignment="Left" Height="39" Margin="108,337,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546" TextChanged="TextBox_TextChanged" BorderBrush="Gray" VerticalContentAlignment="Center" Padding="16,0,0,0" FontSize="20" FontFamily="Georgia" Opacity="0.9">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Label x:Name="tx_email" Content="Email" HorizontalAlignment="Left" Margin="145,258,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="77" Width="144" Opacity="0.75"/>
        <TextBox x:Name="cx_senha" HorizontalAlignment="Left" Height="39" Margin="108,524,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546" TextChanged="TextBox_TextChanged" BorderBrush="Gray" FontSize="20" FontFamily="Georgia" VerticalContentAlignment="Center" Padding="10,0,0,0" Background="White" Opacity="0.9">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Label x:Name="tx_senha" Content="Senha" HorizontalAlignment="Left" Margin="145,446,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="76" Width="152" Opacity="0.75"/>
        <Rectangle x:Name="rt_anarco" HorizontalAlignment="Center" Height="57" Margin="0,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="1240" Fill="#FF1D1D1D" RadiusX="20" RadiusY="25" MouseDown="anarco_voltar">
            <Rectangle.Style>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="40" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF3A3A3A" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="25" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF1D1D1D" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
            <Rectangle.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label x:Name="tx_Anarco" Content="{}{Anarco-Cinema}" Margin="540,32,516,0" Background="Transparent" Foreground="#FFD4D4D4" Height="39" FontFamily="Georgia" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image x:Name="img_logo" HorizontalAlignment="Left" Height="39" Margin="195,32,0,0" VerticalAlignment="Top" Width="39" Source="/icone.png" Stretch="UniformToFill">
            <Image.Clip>
                <RectangleGeometry Rect="0,0,39,39" RadiusX="16" RadiusY="16"/>
            </Image.Clip>
        </Image>
        <Button x:Name="bt_entrar" Content="Entrar" HorizontalAlignment="Left" Margin="127,686,0,0" VerticalAlignment="Top" Height="98" Width="197" Background="White" FontFamily="Georgia" Click="bt_logar_Click" Foreground="#FF1A1A1A" FontSize="32" Opacity="0.9">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" CornerRadius="25" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF707070"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="bt_cadastrar" Content="Cadastrar" HorizontalAlignment="Left" Height="98" Margin="418,686,0,0" VerticalAlignment="Top" Width="198" Background="White" Foreground="#FF1A1A1A" FontSize="32" FontFamily="Georgia" Click="bt_cadastrar_Click_1" RenderTransformOrigin="0.493,0.867" Opacity="0.9">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" CornerRadius="25" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF707070"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
