<Page x:Class="Anarco_Cinema_Desk.Catalogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anarco_Cinema_Desk"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Catalogo">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#FFCACACA" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Rectangle x:Name="rt_anarco_ca" HorizontalAlignment="Left" Height="57" Margin="20,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="1240" Fill="#FF1D1D1D" RadiusX="20" RadiusY="25" MouseDown="anarco_voltar">
            <Rectangle.Style>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="40" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF3A3A3A" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="25" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF1D1D1D" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
            <Rectangle.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label x:Name="tx_Anarco_ca" Content="{}{Anarco-Cinema}" Margin="540,32,516,0" Background="Transparent" Foreground="#FFD4D4D4" Height="39" FontFamily="Georgia" FontSize="24" VerticalAlignment="Top"/>
        <Image x:Name="img_logo_ca" HorizontalAlignment="Left" Height="39" Margin="42,32,0,0" VerticalAlignment="Top" Width="39" Stretch="UniformToFill">
            <Image.Clip>
                <RectangleGeometry Rect="0,0,39,39" RadiusX="16" RadiusY="16"/>
            </Image.Clip>
        </Image>
        <Label Content="Bem Vindo Novamente" HorizontalAlignment="Center" Height="96" Margin="0,144,0,0" VerticalAlignment="Top" Width="386" FontFamily="Georgia" FontSize="36"/>
        <Image x:Name="img_log" HorizontalAlignment="Left" Height="204" Margin="62,0,0,0" VerticalAlignment="Center" Width="154" Source="/setimo.jpg"/>
        <Label Content="Label" HorizontalAlignment="Left" Height="12" Margin="62,469,0,0" VerticalAlignment="Top" Width="153" Background="White"/>
    </Grid>
</Page>

