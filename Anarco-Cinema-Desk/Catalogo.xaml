<Page x:Class="Anarco_Cinema_Desk.Catalogo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anarco_Cinema_Desk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Catalogo">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button x:Name="bt_catalogo_voltar" Content="Button" HorizontalAlignment="Left" Margin="144,108,0,0" VerticalAlignment="Top" Click="Button_Click"/>

        <Border Height="390" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="AliceBlue" />
    </Grid>
</Page>

