<Page x:Class="Anarco_Cinema_Desk.Cadastro"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Anarco_Cinema_Desk"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1600"
      MaxHeight="900" MaxWidth="1600"
      MinHeight="900" MinWidth="1600"
      Title="Cadastro">

    <Grid Background="White">
        <Image HorizontalAlignment="Center" Height="900" VerticalAlignment="Center" Width="1670" Source="/seventh_seal.jpg" Opacity="0.95" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Rectangle x:Name="rt_anarco" HorizontalAlignment="Center" Height="57" Margin="0,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="1240" Fill="#FF1D1D1D" RadiusX="20" RadiusY="25" MouseDown="anarco_voltar">
            <Rectangle.Style>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="40" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF3A3A3A" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="25" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="Fill.Color" To="#FF1D1D1D" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Rectangle.Style>
            <Rectangle.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="25" ShadowDepth="8" Direction="320" Opacity="0.7"/>
            </Rectangle.Effect>
        </Rectangle>
        <Label x:Name="tx_Anarco" Content="{}{Anarco-Cinema}" Margin="540,32,516,0" Background="Transparent" Foreground="#FFD4D4D4" Height="39" FontFamily="Georgia" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Image x:Name="img_logo" HorizontalAlignment="Left" Height="39" Margin="195,32,0,0" VerticalAlignment="Top" Width="39" Source="/icone.png" Stretch="UniformToFill">
            <Image.Clip>
                <RectangleGeometry Rect="0,0,39,39" RadiusX="16" RadiusY="16"/>
            </Image.Clip>
        </Image>
        <TextBox x:Name="cx_email_re" HorizontalAlignment="Left" Height="39" Margin="94,399,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546" BorderBrush="Gray" VerticalContentAlignment="Center" Padding="16,0,0,0" FontSize="20" FontFamily="Georgia" Opacity="0.9">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>

        <PasswordBox x:Name="cx_senha_re" HorizontalAlignment="Left" Height="39" Margin="94,524,0,0" VerticalAlignment="Top" Width="546"  BorderBrush="Gray" VerticalContentAlignment="Center" Padding="16,0,0,0" FontSize="20" FontFamily="Georgia" Opacity="0.9">
            <PasswordBox.Style>
                <Style TargetType="{x:Type PasswordBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type PasswordBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </PasswordBox.Style>
        </PasswordBox>

        <!--<TextBox x:Name="cx_senha_re" HorizontalAlignment="Left" Height="39" Margin="94,524,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546"  BorderBrush="Gray" VerticalContentAlignment="Center" Padding="16,0,0,0" FontSize="20" FontFamily="Georgia" Opacity="0.9">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>-->
        <Label x:Name="tx_email" Content="Email" HorizontalAlignment="Left" Margin="145,321,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="77" Width="144" Opacity="0.75" Foreground="White"/>
        <Label x:Name="tx_senha" Content="Senha" HorizontalAlignment="Left" Margin="145,448,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Georgia" Height="76" Width="152" Opacity="0.75" Foreground="White"/>
        <Button x:Name="bt_cada" Content="Registrar" HorizontalAlignment="Left" Height="98" Margin="272,684,0,0" VerticalAlignment="Top" Width="197" Click="Button_Click_1" FontSize="32" FontFamily="Georgia" Background="White">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" CornerRadius="25" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" RenderTransformOrigin="0.5,0.5">
                        <!-- RenderTransform para escalonamento -->
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Border.Effect>
                            <!-- Efeito de sombra que será animado -->
                            <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Trigger animado usando EnterActions/ExitActions -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- "Pop" suave -->
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.08" Duration="0:0:0.18">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase Amplitude="0.45" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.08" Duration="0:0:0.18">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase Amplitude="0.45" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <!-- Intensificar a sombra -->
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" To="70" Duration="0:0:0.25"/>
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)" To="22" Duration="0:0:0.25"/>
                                        <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)" To="#FF333333" Duration="0:0:0.25"/>
                                        
                                        <!-- Opcional: escurecer levemente o fundo do botão no hover -->
                                        <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFBFBFBF" Duration="0:0:0.18"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <!-- Reverter para estado original -->
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase Amplitude="0.35" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.25">
                                            <DoubleAnimation.EasingFunction>
                                                <BackEase Amplitude="0.35" EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>

                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" To="45" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.ShadowDepth)" To="15.6" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Color)" To="Black" Duration="0:0:0.3"/>
                                        
                                        <ColorAnimation Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="White" Duration="0:0:0.25"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="cx_nome" HorizontalAlignment="Left" Height="39" Margin="94,273,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="546" BorderBrush="Gray" VerticalContentAlignment="Center" Padding="16,0,0,0" FontSize="20" FontFamily="Georgia" Opacity="0.9" TextChanged="cx_nome_TextChanged">
            <TextBox.Style>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TextBox}">
                                <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="45" ShadowDepth="15.6" Direction="320" Opacity="1" RenderingBias="Quality"/>
                                    </Border.Effect>
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Label x:Name="tx_nome" Content="Nome" HorizontalAlignment="Left" Height="73" Margin="145,198,0,0" VerticalAlignment="Top" Width="144" FontSize="48" Opacity="0.75" FontFamily="Georgia" Foreground="White"/>
    </Grid>
</Page>
